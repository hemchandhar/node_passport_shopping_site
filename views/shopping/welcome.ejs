<% /* %>
products
 <% */ %>

<% for(var i=0; i < products.length; i++) { %>
  <br>
   <div class="row">
    <% products[i].forEach(function(product){ %>
      <div class="col-sm-4">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= product.image_path %>">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
            <div>
              Rs.<%= product.price %>
            </div>
            <a href="/add-to-cart/<%= product.id %>" class="btn btn-primary float-right">Add to Cart</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

<% } %>

